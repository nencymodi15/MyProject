<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartComplaint">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Comp No   :"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"/>
            <TextView
                android:text=""
                android:id="@+id/asccompno"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Date            :"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"/>
            <TextView
                android:text=""
                android:id="@+id/ascdate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Project       :"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"/>
            <TextView
                android:text=""
                android:id="@+id/ascproject"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="2"/>
            <TextView
                android:text="Party       :"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="3"/>
            <TextView
                android:text=""
                android:id="@+id/ascparty"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="4"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Zone           :"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"/>
            <TextView
                android:text=""
                android:id="@+id/asczone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="2"/>
            <TextView
                android:text="MCC        :"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="3"/>
            <TextView
                android:text=""
                android:id="@+id/ascmcc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="4"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Company   :"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="1"/>
            <TextView
                android:text=""
                android:id="@+id/asccompany"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text="Machine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:textColor="@color/black"
                android:layout_column="1"/>
            <TextView
                android:text="Complaint Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:padding="18dip"
                android:layout_column="2"/>
            <TextView
                android:text="Action"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:layout_column="3"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:id="@+id/crsmachineid"
                android:layout_column="1"/>
            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="18dip"
                android:id="@+id/crscmpstatus"
                android:layout_column="2"/>
            <TextView
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:id="@+id/crsusername"
                android:layout_column="3"/>

        </TableRow>
    </TableLayout>


</LinearLayout>