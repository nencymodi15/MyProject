            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:text="SUBMIT"/>

